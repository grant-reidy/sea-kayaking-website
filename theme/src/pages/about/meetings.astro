---
import Layout from '../../layouts/Base.astro';
import Logo from '../../components/Logo.astro';
import {
  AnnouncementBar,
	Button,
	CustomerQuoteSection,
	ThreeColumnTextSection,
	YouTubeEmbedSection,
  StickyTextImageSection,
  CtaCardSection
} from '@littlesticks/odyssey-theme-components';
import { Icon } from 'astro-icon';

const seo = {
	title: 'Meetings | Sea Kayaking',
	description: 'General information about meeting times for Sea Kayaking at Georgia Tech',
};
---

<Layout seo={seo}>
  <div class="full-page-split__wrapper">
    <section class="full-page-split__image-section">
      <div class="full-page-split__logo">
        <a href="/">
          <Logo />
        </a>
      </div>
      <picture>
        <img
          src="/assets/images/about/meetings/background.png"
          alt="Background Image of Antarctica"
          class="full-page-split__image"
        />
      </picture>
    </section>
    <section class="full-page-split__content-section">
      <div class="full-page-split__content-container">  
        <h1>Sea Kayaking Meetings</h1>
          <p>Sea Kayaking Meetings are held every <a href="/assets/images/about/meetings/sea-kayaking-meeting.ics" download>Tuesday at 5:30pm</a> during the academic year 
            at Outdoor Recreation Georgia Tech (ORGT), located in the back of the Georgia Tech 
            Campus Recreation Center (CRC).</p>
        <p>Join us to learn more about the amazing opportunities facilitated by Sea Kayaking 
          and its staff and how to get involved in these life-changing experiences!</p>


          <Button href="/assets/images/about/meetings/sea-kayaking-meeting.ics" download customIcon
						>Add to Calendar
            <Fragment slot="icon">
              <Icon name="ic:baseline-calendar-month"/>
            </Fragment>
            </Button>
      </div>
    </section>
  </div>
</Layout>

<style>
.full-page-split__wrapper {
  display: grid;
  grid-template-columns: 6fr 4fr;
  grid-auto-columns: 1fr;
  min-height: 100vh;
}
.full-page-split__image-section {
  position: relative;
}
.full-page-split__image-section :global(img) {
 width: 100%;
  height: 100vh;
  object-fit: cover;
}
.full-page-split__logo {
  background-color: var(--theme-surface-1);
  color: (--theme-on-surface-1);
  padding: 0.5rem 1rem;
  border-radius: var(--theme-shape-radius);
  top: 1rem;
  left: 1rem;
  position: absolute;
  z-index: 1;
}
.full-page-split__logo a {
  text-decoration: none;
}
.full-page-split__content-section {
  display: flex;
  flex-direction: column;
  justify-content: center;
}
.full-page-split__content-container {
  margin: 1rem;
  padding: 2rem;
  background-color: var(--theme-surface-1);
  color: var(--theme-on-surface-1);
  border-radius: var(--theme-shape-radius);
}
.full-page-split__content-container h1 {
  font-size: var(--font-size-xl);
}
@media(max-width: 768px) {
  .full-page-split__wrapper {
    grid-template-columns: 1fr;
    grid-template-rows: 30vh auto;
  }
  .full-page-split__image-section :global(img) {
    max-height: 30vh;
  }
}
</style>

