---
const {href, title} = Astro.props;
---

<style>
  .feature-card__card {
    background-color: var(--theme-surface-1);
    color: var(--theme-on-surface-1);
    border-radius: var(--theme-shape-radius);
  }
  .feature-card__link {
    display: block;
    text-decoration: none;
  }
  .featured-card__content {
    padding: 1rem 1rem 0 1rem;
    display: flex;
    height: auto;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    overflow-y: hidden;
  }
  .feature-card__card .feature-card__img {
    width: clamp(100%, 100%, 390px);
    height: auto;
    object-fit: cover;
    /* border-radius: 1rem 1rem 0 0; */
    border-radius: calc(var(--theme-shape-radius) /2);
    transition: border-radius var(--theme-transition);
    margin-bottom: 1rem;
  }
  .feature-card__card:hover .feature-card__img {
    transform: translateY(0);
  }
  .feature-card__title {
    font-family: var(--theme-font-family-sans);
  }
  .circle {
    height: 750px;
    width: 100%;
    border-radius: calc(var(--theme-shape-radius) /2);
    overflow: hidden;
    margin-bottom: 1rem;
  } 
</style>


<div class="feature-card__card">
  <div class="featured-card__content">
    <h2>{title}</h2>  
      <div class="circle">
        <iframe width='100%' height='100%' src={href} title="Outdoors" style="border:none;"></iframe>
    </div>
    </div>
</div> 

