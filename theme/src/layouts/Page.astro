---
import { Header, Button} from '@littlesticks/odyssey-theme-components';
import Footer from "../components/sections/heros/Footer.astro"
import Layout from './Base.astro';
import type { Props as BaseHeadProps } from '../components/head/BaseHead.astro';
import Logo from '../components/Logo.astro';
import settings from '../config/settings';
import { footerLists, footerSocials } from '../config/footer';


export interface Props {
	seo?: BaseHeadProps;
}

import { nav } from '../config/nav.js';

const { seo } = Astro.props as Props;
---

<Layout seo={seo}>
	<!-- Google tag (gtag.js) -->
	<script
  		type="text/partytown"
  		src="https://www.googletagmanager.com/gtag/js?id=G-HS582VQYJJ">
	</script>
	<script type="text/partytown">
  		window.dataLayer = window.dataLayer || [];
  		function gtag() {
    	dataLayer.push(arguments);
  	}
  	gtag("js", new Date());
  	gtag("config", "G-HS582VQYJJ");
	</script>
	<Header rightMenu navData={nav} slot="header">
		<span slot="logo">
			<!-- <Logo /> -->
		</span>
		<!-- <Button slot="action-item" href="/about/meetings">Meetings</Button> -->
	</Header>
	<div id="page">
		<slot />
	</div>
	<Footer
		slot="footer"
		background="var(--theme-surface-1)"
		color="var(--theme-on-surface-1)"
		footerLists={footerLists}
    	footerSocials={footerSocials}
		copyrightName={settings.name}
    	showLittleSticksPlug={settings.showLittleSticksPlug}
	>
		<Logo href="/" slot="logo" />
	</Footer>
</Layout>
